<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_title"
        layout="@layout/view_layout_title" />

    <cn.ucai.superwechat.widget.MFViewPager
        android:id="@+id/layout_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title"
        android:paddingBottom="48dp">

    </cn.ucai.superwechat.widget.MFViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D6DCDC" />

        <cn.ucai.superwechat.widget.DMTabHost
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:paddingBottom="1dp">

            <cn.ucai.superwechat.widget.DMTabButton
                drawableTop="@drawable/tab_contact_list"
                tabtext="@string/contacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </cn.ucai.superwechat.widget.DMTabButton>

            <cn.ucai.superwechat.widget.DMTabButton
                drawableTop="@drawable/tab_find"
                tabtext="@string/discover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </cn.ucai.superwechat.widget.DMTabButton>

            <cn.ucai.superwechat.widget.DMTabButton
                drawableTop="@drawable/tab_profile"
                tabtext="@string/me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </cn.ucai.superwechat.widget.DMTabButton>
        </cn.ucai.superwechat.widget.DMTabHost>

    </LinearLayout>

</RelativeLayout>