<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_friend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/view_layout_title" />

    <RelativeLayout
        android:id="@+id/layout_profile_view"
        style="@style/list_txt_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/default_hd_avatar" />

        <TextView
            android:id="@+id/tvNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/ivAvatar"
            android:text="大白鲨"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvWeXinNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNickName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/ivAvatar"
            android:text="微信号:" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNickName"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/tvWeXinNum"
            android:text="123" />

    </RelativeLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="@color/black3" />

    <RelativeLayout
        android:id="@+id/rl_tag"
        style="@style/list_txt_Style"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="设置备注和标签"
            android:textSize="20dp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="@color/black3" />

    <Button
        android:id="@+id/addContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@color/login_bg"
        android:text="添加到通讯录"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_sendMessage"
            style="@style/btn_titleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@color/login_bg"
            android:text="发消息"
            android:textSize="20dp"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="@color/black3" />

        <Button
            android:id="@+id/btn_video_call"
            style="@style/btn_titleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@color/white"
            android:text="视频聊天"
            android:textSize="20dp"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="@color/black3" />
    </LinearLayout>


</LinearLayout>
